            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .menu-item:hover {
                transform: scale(1.05);
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            }

        .menu-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .price {
            font-weight: bold;
            color: #e74c3c;
            font-size: 1.2rem;
            margin-top: 10px;
        }
    </style>
    <style>
        /* Fondo con imágenes */
        .reservation-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://source.unsplash.com/1600x900/?restaurant,table') center no-repeat;
            filter: brightness(40%) blur(2px);
            z-index: -1;
        }

        .reservation-form {
            max-width: 600px;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            border-radius: 10px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.3);
                color: white;
                box-shadow: none;
            }

        /* Estilo para los inputs readonly */
        input[readonly] {
            background: rgba(200, 200, 200, 0.3) !important;
            cursor: not-allowed;
        }

        .reservation-btn {
            background-color: #28A745 !important;
            color: white !important;
            font-weight: bold;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

            .reservation-btn:hover {
                background-color: #218838 !important;
            }
    </style>
    <!-- Reservation Section -->
    <section id="reservation" class="section-padding position-relative">
        <div class="reservation-bg"></div>
        <div class="container position-relative">
            <div class="section-title text-center">
                <h2>Reservación</h2>
                <p>Reserva una Mesa en Nuestro Restaurante</p>
            </div>

            <div class="d-flex justify-content-center">
                <form id="reservationForm" action="@Url.Action("Nueva", "Home")" method="post" class="reservation-form shadow-lg">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <!-- Reservation details -->
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="cantidadPersonas" name="CantidadPersonas" placeholder="Número de Personas" required min="1" max="20">
                                <label for="cantidadPersonas">Número de Personas</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select class="form-control" id="mesaId" name="MesaId" required>
                                    <option value="">Seleccione una mesa</option>
                                </select>
                                <label for="mesaId">Mesa</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control" id="fechaReserva" name="FechaReserva" required>
                                <label for="fechaReserva">Fecha de Reserva</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="time" class="form-control" id="horaReserva" name="HoraReserva" required>
                                <label for="horaReserva">Hora de Reserva</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="mensaje" name="MensajeEspecial" rows="4" placeholder="Mensaje Especial" style="height: 100px"></textarea>
                                <label for="mensaje">Mensaje Especial</label>
                            </div>
                        </div>

                        <!-- Validation messages -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="col-12">
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(true)
                                </div>
                            </div>
                        }

                        <!-- Result messages -->
                        <div class="col-12">
                            <div id="reservationResult" class="alert alert-info d-none" role="alert"></div>
                        </div>

                        <!-- TempData messages -->
                        @if (TempData["Error"] != null)
                        {
                            <div class="col-12">
                                <div class="alert alert-danger">@TempData["Error"]</div>
                            </div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="col-12">
                                <div class="alert alert-success">@TempData["Success"]</div>
                            </div>
                        }

                        <div class="col-12 text-center">
                            <button type="submit" class="btn reservation-btn mt-3">
                                <i class="bi bi-calendar-check me-2"></i>Reservar Ahora
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>


    @section scripts {
        <script>
        // Add this to your main script block or external JS file
        document.addEventListener('DOMContentLoaded', function() {
            // Verificar si el usuario está logueado pero sin redirigir inmediatamente
            const clienteId = '@Session["ClienteId"]';

            // Redirigir si el cliente no está logueado
            if (!clienteId || clienteId === '' || clienteId === '0') {
                window.location.href = '/Acceso/Index';
                return;
            }

            // Initialize date picker with today's date
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            const formattedDate = `${yyyy}-${mm}-${dd}`;

            const fechaReserva = document.getElementById('fechaReserva');
            if (fechaReserva) {
                fechaReserva.setAttribute('min', formattedDate);
                fechaReserva.value = formattedDate;
                fechaReserva.addEventListener('change', cargarMesasPorCapacidad);
            }

            // Handle time validation
            const horaReserva = document.getElementById('horaReserva');
            if (horaReserva) {
                // Establecer hora predeterminada (14:00)
                horaReserva.value = '14:00';

                horaReserva.addEventListener('change', function() {
                    const selectedTime = this.value;
                    if (!selectedTime) return;

                    const [hours, minutes] = selectedTime.split(':');

                    // Validate business hours (12:00 to 23:00)
                    if (parseInt(hours) < 12 || parseInt(hours) >= 23) {
                        alert('Lo sentimos, nuestro horario de reservas es de 12:00 a 23:00.');
                        this.value = '14:00';
                    }
                });
            }

            // Handle quantity changes
            const cantidadPersonas = document.getElementById('cantidadPersonas');
            if (cantidadPersonas) {
                // Establecer valor predeterminado
                cantidadPersonas.value = '2';
                cantidadPersonas.addEventListener('change', cargarMesasPorCapacidad);

                // Cargar mesas iniciales
                setTimeout(cargarMesasPorCapacidad, 500);
            }

            // Handle form submission
            const reservationForm = document.getElementById('reservationForm');
            if (reservationForm) {
                reservationForm.addEventListener('submit', handleReservationSubmit);
            }
        });

        // Function to load available tables based on capacity
        function cargarMesasPorCapacidad() {
            const cantidadPersonas = document.getElementById('cantidadPersonas').value;
            const fechaSeleccionada = document.getElementById('fechaReserva').value;
            const mesaIdSelect = document.getElementById('mesaId');

            // Verify input
            if (!cantidadPersonas || cantidadPersonas < 1) {
                mesaIdSelect.innerHTML = '<option value="">Seleccione una mesa</option>';
                return;
            }

            // Show loading indicator
            mesaIdSelect.innerHTML = '<option value="">Cargando mesas disponibles...</option>';

            // Fetch available tables using Fetch API instead of jQuery
            fetch(`/Home/ObtenerMesasDisponibles?capacidad=${cantidadPersonas}&fecha=${fechaSeleccionada}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error en la respuesta del servidor');
                    }
                    return response.json();
                })
                .then(mesas => {
                    // Clear table selector
                    mesaIdSelect.innerHTML = '<option value="">Seleccione una mesa</option>';

                    // Add available tables to selector
                    if (mesas && mesas.length > 0) {
                        mesas.forEach(mesa => {
                            const option = document.createElement('option');
                            option.value = mesa.Id;
                            option.textContent = `Mesa ${mesa.NumeroMesa} - ${mesa.Ubicacion} (Capacidad: ${mesa.Capacidad})`;
                            mesaIdSelect.appendChild(option);
                        });
                    } else {
                        const option = document.createElement('option');
                        option.value = "";
                        option.disabled = true;
                        option.textContent = "No hay mesas disponibles para esa cantidad de personas";
                        mesaIdSelect.appendChild(option);
                    }
                })
                .catch(error => {
                    mesaIdSelect.innerHTML = '<option value="">Error al cargar mesas</option>';
                    alert('Ha ocurrido un error al cargar las mesas disponibles. Por favor, intente nuevamente.');
                    console.error('Error:', error);
                });
        }

        // Modificar la función handleReservationSubmit para verificar datos del cliente
        function handleReservationSubmit(e) {
            e.preventDefault();

            // Check if client is logged in
            const clienteId = '@Session["ClienteId"]'; // This will be replaced by Razor
            if (!clienteId || clienteId === '' || clienteId === '0') {
                window.location.href = '/Acceso/Index';
                return;
            }

            // Show spinner on button
            const submitButton = this.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Procesando...';
            submitButton.disabled = true;

            // Check if a table is selected
            const mesaId = document.getElementById('mesaId').value;
            if (!mesaId) {
                alert('Por favor seleccione una mesa disponible');
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
                return;
            }

            // Submit form using Fetch API
            const formData = new FormData(this);

            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                const resultDiv = document.getElementById('reservationResult');
                resultDiv.classList.remove('d-none', 'alert-warning', 'alert-danger', 'alert-success');

                if (data.success) {
                    resultDiv.classList.add('alert-success');
                    resultDiv.innerHTML = '<i class="bi bi-check-circle"></i> ' + data.message;

                    // Clear form
                    document.getElementById('mensaje').value = '';
                    document.getElementById('cantidadPersonas').value = '2';
                    document.getElementById('mesaId').innerHTML = '<option value="">Seleccione una mesa</option>';

                    // Optional: redirect after success
                    setTimeout(() => {
                        window.location.href = '/Home/Index';
                    }, 3000);
                } else {
                    resultDiv.classList.add('alert-warning');
                    resultDiv.innerHTML = '<i class="bi bi-exclamation-triangle"></i> ' + data.message;
                }
            })
            .catch(error => {
                const resultDiv = document.getElementById('reservationResult');
                resultDiv.classList.remove('d-none', 'alert-warning', 'alert-success');
                resultDiv.classList.add('alert-danger');
                resultDiv.innerHTML = '<i class="bi bi-x-circle"></i> Ha ocurrido un error al procesar tu reserva. Por favor, intenta más tarde.';
                console.error('Error:', error);
            })
            .finally(() => {
                // Restore button
                submitButton.innerHTML = originalText;
                submitButton.disabled = false;
            });
        }
        </script>
    }

</body>
