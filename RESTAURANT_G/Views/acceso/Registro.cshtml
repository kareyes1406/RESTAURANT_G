@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background: linear-gradient(to bottom, #000000, #2c2c2c, #8b6f47);
            color: #fff;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            width: 600px;
            border-radius: 1.5rem;
            padding: 3rem;
            background-color: #1c1c1c;
            box-shadow: 0px 6px 20px rgba(255, 215, 0, 0.4);
            border: 1px solid gold;
        }

        .form-control {
            background: transparent;
            border: 2px solid gold;
            color: #fff;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #ffd700;
                box-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
            }

        .btn-register, .btn-verify {
            background-color: gold;
            border: none;
            font-size: 1.3rem;
            padding: 0.75rem;
            color: #000;
            font-weight: bold;
            transition: transform 0.2s ease, box-shadow 0.3s ease;
        }

            .btn-register:hover, .btn-verify:hover {
                transform: scale(1.05);
                box-shadow: 0px 0px 15px rgba(255, 215, 0, 0.8);
            }

        .spinner-container, #verificationContainer {
            display: none;
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card">
            <h2 class="text-center mb-4">Registro</h2>

            <form id="registerForm">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" required>
                </div>
                <div class="mb-3">
                    <label for="telefono" class="form-label">Teléfono</label>
                    <input type="text" class="form-control" id="telefono" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Correo</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Clave</label>
                    <input type="password" class="form-control" id="password" required minlength="6">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirmar Clave</label>
                    <input type="password" class="form-control" id="confirmPassword" required>
                </div>
                <button type="submit" class="btn btn-register w-100">Registrarse</button>
            </form>

            <div class="spinner-container" id="spinnerContainer">
                <div class="spinner-grow text-warning" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p>Enviando código de verificación...</p>
            </div>

            <div id="verificationContainer">
                <label for="verificationCode" class="form-label">Ingrese el código de verificación</label>
                <input type="text" class="form-control mb-2" id="verificationCode" required>
                <button class="btn btn-verify w-100" onclick="verifyCode()">Verificar Código</button>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#registerForm").submit(function (e) {
            e.preventDefault();
            $(".btn-register").prop("disabled", true);

            var email = $("#email").val();
            var clave = $("#password").val();
            var confirmClave = $("#confirmPassword").val();

            if (clave !== confirmClave) {
                alert("Las contraseñas no coinciden.");
                $(".btn-register").prop("disabled", false);
                return;
            }

            $("#spinnerContainer").show();
            $("#registerForm").hide();

            $.post("/Acceso/EnviarCodigo", { email: email }, function (data) {
                $("#spinnerContainer").hide();
                $(".btn-register").prop("disabled", false);

                if (data.success) {
                    alert("Código enviado. Revisa tu correo.");
                    $("#verificationContainer").show();
                } else {
                    alert("Error al enviar código: " + data.message);
                    $("#registerForm").show();
                }
            }).fail(function () {
                $("#spinnerContainer").hide();
                $(".btn-register").prop("disabled", false);
                alert("Error de conexión con el servidor.");
                $("#registerForm").show();
            });
        });
    });

    function verifyCode() {
        var codigo = $("#verificationCode").val();
        if (codigo.trim() === "") {
            alert("Ingrese el código de verificación.");
            return;
        }

        $.post("/Acceso/VerificarCodigo", { codigo: codigo }, function (data) {
            if (data.success) {
                alert("Código correcto. Registrando usuario...");
                registrarUsuario();
            } else {
                alert("Código incorrecto. Inténtelo de nuevo.");
            }
        }).fail(function () {
            alert("Error de conexión con el servidor.");
        });
    }

    function registrarUsuario() {
        var nombre = $("#nombre").val();
        var telefono = $("#telefono").val();
        var email = $("#email").val();
        var clave = $("#password").val();

        $.post("/Acceso/RegistrarUsuario", {
            nombre: nombre,
            correo: email,
            contraseña: clave,
            telefono: telefono
        }, function (data) {
            alert(data.message);
            if (data.success) {
                window.location.href = "/Acceso/Index";
            }
        }).fail(function () {
            alert("Error de conexión con el servidor.");
        });
    }

</script>
